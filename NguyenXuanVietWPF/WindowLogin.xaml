<Window x:Class="NguyenXuanVietWPF.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenXuanVietWPF"
        mc:Ignorable="d"
        Title="WindowLogin" Height="270" Width="450" Background="AliceBlue">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top"
                Height="Auto"
                Width="400">

        <TextBlock HorizontalAlignment="Center"
                   Margin="0, 10" TextWrapping="Wrap"
                   VerticalAlignment="Top" FontSize="20"
                   Foreground="Red" FontWeight="Bold"
                   Text="FU Mini Hotel"/>

        <Label Content="Email"/>
        <TextBox HorizontalAlignment="Stretch" Name="txtEmail"
                 Height="25" Margin="5, 0"/>

        <Label Content="Password"/>
        <PasswordBox HorizontalAlignment="Stretch" Name="pbPassword"
         Height="25" Margin="5, 0"/>

        <Button Margin="0, 30" Width="70" Click="btnLogin_Click">Login</Button>
    </StackPanel>
  
</Window>
