<Window x:Class="NguyenXuanVietWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenXuanVietWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Top" Padding="20" Margin="20" x:Name="btnCustomer" Click="btnCustomer_Click">Customers Management</Button>
            <Button DockPanel.Dock="Top" Padding="20" Margin="20" x:Name="btnRoom" Click="btnRoom_Click">Room Management</Button>
            <Button DockPanel.Dock="Top" Padding="20" Margin="20" x:Name="btnBooking" Click="btnBooking_Click">Booking Management</Button>
            <Button DockPanel.Dock="Bottom" Padding="20" Margin="20" x:Name="btnLogout" Click="btnLogout_Click">Log out</Button>
        </DockPanel>
    </Grid>
</Window>
